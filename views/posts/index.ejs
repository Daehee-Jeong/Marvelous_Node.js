<!-- views/posts/index.ejs -->

<!DOCTYPE html>
<html>
 <head>
  <link rel="stylesheet" href="/css/posts.css">
  <% include ../partials/head %>
 </head>
 <body background="/res/background.jpg">
  <% include ../partials/nav %>
  <div class="container post post-index panel panel-default">
   <% include ./partials/header %>

   <div class="buttons">
    <a class="btn btn-default" href="/posts/new">New</a>
   </div>

   <table class="table table-striped posts">
    <thead>
     <tr>
      <th class="title">Title</th>
      <th class="date">Date</th>
     </tr>
    </thead>
    <tbody>
     <% if(posts == null || posts.length == 0){ %>
      <tr>
       <td class="noData" colspan=100> There is no data to show :( </td>
      </tr>
     <% } %>
     <% posts.forEach(function(post) { %>
      <tr>
       <td class="title">
        <a href="/posts/<%= post._id %>"><div><%= post.title %></div></a>
       </td>
       <td class="date">
        <%= post.createdDate %>
       </td>
      </tr>
     <% }) %>
    </tbody>
   </table>
  </div> <!-- container end -->
 </body>
</html>

